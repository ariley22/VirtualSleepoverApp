<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reusables.WaitingFrag">

    <TextView
        android:id="@+id/waitingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@id/partnerNameTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/partnerNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="partnerName"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@id/toTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/waitingTV"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/toTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@id/writeOrRespondTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partnerNameTV"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/writeOrRespondTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toTV"
        app:layout_constraintVertical_chainStyle="packed" />


</androidx.constraintlayout.widget.ConstraintLayout>